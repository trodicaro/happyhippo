<!DOCTYPE html>
<html>
  <head>
    <title>Happyhippos</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/highcharts-more.js"></script>

  </head>

  <body>
    <div id='container'>
      <nav class="navbar navbar-light navbar-toggleable-md bg-faded" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">Ai's Dashboard</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <form class="form-inline my-2 my-lg-0 pull-right">
            <input class="form-control mr-sm-2" type="text" placeholder="Enter Zipcode">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Filter</button>
          </form>
        </div>
      </nav>

    <div class='row'>
      <div class='col-lg-12'>
        <div id="chart1" class='col-xs-12 col-lg-6' style="min-width: 310px; height: 400px; margin: 0 auto"></div>
        <div id="chart2" class='col-xs-12 col-lg-6' style="min-width: 310px; height: 400px; margin: 0 auto"></div>
      </div>
    <div>
    <div class='row'>
      <div class='col-lg-12'>
        <div id="chart3" class='col-xs-12 col-lg-6' style="min-width: 310px; height: 400px; margin: 0 auto"></div>
        <div id="chart4" class='col-xs-12 col-lg-6' style="min-width: 310px; height: 400px; margin: 0 auto"></div>
      </div>
    <div>
  </div>

    <script type="text/javascript">
      Highcharts.chart('chart1', {
        chart: {
            type: 'area'
        },
        title: {
            text: 'Monthly Percentage Food Group Consumption'
        },

        xAxis: {
            categories: [ 'April', 'May', 'June', 'July', 'Aug', 'Sep'],
            tickmarkPlacement: 'on',
            title: {
                enabled: false
            }
        },
        yAxis: {
            title: {
                text: 'Percent'
            }
        },
        tooltip: {
            pointFormat: '<span style="color:{series.color}">{series.name}</span>: <b>{point.percentage:.1f}%</b> ({point.y:,.0f} pounds)<br/>',
            split: true
        },
        plotOptions: {
            area: {
                stacking: 'percent',
                lineColor: '#ffffff',
                lineWidth: 1,
                marker: {
                    lineWidth: 1,
                    lineColor: '#ffffff'
                }
            }
        },
        series: [{
            name: 'Bread,Cereal',
            data: [5, 6, 8, 9, 14, 36]
        }, {
            name: 'Fruit,Vegetable',
            data: [10, 11, 9, 6, 2, 7]
        }, {
            name: 'Meat,Milk',
            data: [1, 2, 2, 4, 5, 7]
        }, {
            name: 'Fats',
            data: [1, 3, 5, 1, 3, 8]
        }]
      });

      Highcharts.chart('chart2', {
        chart: {
            type: 'column'
        },
        title: {
            text: 'My Weight Trend (Lbs)'
        },
        xAxis: {

            categories: ['Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep']
        },
         yAxis: {

           title: {text:'Lbs'}
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'Ideal',
            data: [150, 150, 150, 150,150, 150]
        }, {
            name: 'Difference',
            data: [-5, 0, 10, 20, 22,26]
        }, {
            name: 'Actual',
            data: [145, 150, 160, 170,172, 176]
        }]
      });

      var ranges = [
              ['Apr', 0, 200],
              ['May', 0, 200],
              ['June', 0, 200],
              ['July', 0, 200],
              ['August', 0, 200],
              ['Sep', 0, 200]
          ],
          averages = [
            ['Apr', 190],
              ['May', 195],
              ['June', 197],
              ['July', 198],
              ['August', 201],
              ['Sep', 210]
          ];

      Highcharts.chart('chart3', {
        title: {
            text: 'My Total Cholesterol Trend'
        },
        xAxis: {
             categories: ['Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep']
        },
        yAxis: {
            title: {
                text: 'Total Cholesterol'
            }
        },
        tooltip: {
            crosshairs: true,
            shared: true,
            valueSuffix: 'mg/dL'
        },
        legend: {
        },
        series: [{
            name: 'Total Cholesterol',
            data: averages,
            zIndex: 1,
            marker: {
                fillColor: 'white',
                lineWidth: 2,
                lineColor: Highcharts.getOptions().colors[0]
            }
        }, {
            name: 'Range',
            data: ranges,
            type: 'arearange',
            lineWidth: 0,
            linkedTo: ':previous',
            color: Highcharts.getOptions().colors[0],
            fillOpacity: 0.3,
            zIndex: 0,
            marker: {
                enabled: false
            }
        }]
      });
    </script>
  </body>

</html>





